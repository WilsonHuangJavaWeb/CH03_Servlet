<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <context-param>
        <param-name>upload folder</param-name>
        <param-value>attachement</param-value>
    </context-param>
    <context-param>
        <param-name>allowed file type</param-name>
        <param-value>.gif,.hpg,.bmp</param-value>
    </context-param>


    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>com.servlet.FirstServlet</servlet-class>
        <init-param>
            <param-name>message</param-name>
            <param-value>welcome rto FirstServlet</param-value>
        </init-param>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>utf-8</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>RequsetServlet</servlet-name>
        <servlet-class>com.servlet.RequestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IdentityServlet</servlet-name>
        <servlet-class>com.servlet.IdentityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContextParamServlet</servlet-name>
        <servlet-class>com.servlet.ContextParamServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitParamServlet</servlet-name>
        <servlet-class>com.servlet.InitParamServlet</servlet-class>
        <!--初始化參數-->
        <init-param>
            <param-name>helloween</param-name>
            <param-value>password</param-value>
        </init-param>
        <init-param>
            <param-name>admin</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>babyface</param-name>
            <param-value>babyface</param-value>
        </init-param>
        <init-param>
            <param-name>Peter</param-name>
            <param-value>Peter</param-value>
        </init-param>
    </servlet>


    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/servlet/FirstServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RequsetServlet</servlet-name>
        <url-pattern>/servlet/RequestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IdentityServlet</servlet-name>
        <url-pattern>/servlet/IdentityServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitParamServlet</servlet-name>
        <url-pattern>/servlet/InitParamServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContextParamServlet</servlet-name>
        <url-pattern>/servlet/ContextParamServlet</url-pattern>
    </servlet-mapping>
</web-app>